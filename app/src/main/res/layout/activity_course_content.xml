<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- הערות כלליות -->
        <TextView
            android:id="@+id/existingNotesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/rounded_background"
            android:text="הערות כלליות"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- הזנת הערות כלליות -->
        <EditText
            android:id="@+id/newNotesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הקלד הערות חדשות"
            android:layout_marginBottom="8dp" />

        <!-- כפתור לשמירת הערות -->
        <Button
            android:id="@+id/btnSaveNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור הערות"
            android:layout_marginBottom="16dp" />

        <!-- רשימת קבצים -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="קבצים שהועלו"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/filesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- רשימת הודעות -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="הודעות"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/messagesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- הזנת הודעה -->
        <EditText
            android:id="@+id/newMessageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הקלד הודעה חדשה"
            android:layout_marginBottom="16dp" />

        <!-- כפתורי פעולה -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUploadFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="העלה קובץ" />

            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שלח הודעה" />
        </LinearLayout>

        <!-- כפתור הוספת סטודנטים -->
        <Button
            android:id="@+id/btnAddStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הוספת סטודנטים"
            android:layout_marginTop="16dp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
